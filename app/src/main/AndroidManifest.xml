<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sizdev.arkhirefortalent">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ArkhireTalent"
        android:usesCleartextTraffic="true">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${mapsApiKey}" />

        <activity
            android:name=".homepage.item.account.profile.curiculumvitae.CurriculumVitaeActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".homepage.item.account.profile.previewer.TalentPreviewActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".homepage.item.explore.contributor.ContributorActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".homepage.item.account.profile.workexperience.add.AddWorkExperienceActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".homepage.item.account.profile.portfolio.create.CreatePortfolioActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".homepage.item.account.profile.workexperience.details.WorkExperienceDetailActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".homepage.item.account.profile.portfolio.details.PortfolioDetailsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".homepage.item.company.profile.CompanyProfileActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".homepage.item.home.project.detailedproject.DetailOfProjectActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".homepage.item.home.project.waitingproject.ShowWaitingProjectActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".homepage.item.home.project.declinedproject.ShowDeclinedProjectActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".homepage.item.home.project.approvedproject.ShowApprovedProjectActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".homepage.item.home.project.allproject.ShowAllProjectActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".webviewer.ArkhireWebViewerActivity"/>
        <activity
            android:name=".onboarding.OnBoardingActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".administration.password.ResetPasswordActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".homepage.item.account.profile.editingprofile.EditProfileActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".homepage.item.account.profile.TalentProfileActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".administration.email.ResetEmailActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".administration.login.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".administration.register.RegisterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".homepage.HomeActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>