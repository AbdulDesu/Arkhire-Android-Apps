<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/showAllCompanyItem"
        android:layout_height="100dp">

        <RelativeLayout
            android:background="@drawable/bg_shadow"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_companyImage"
                android:src="@drawable/ic_company"
                android:layout_centerVertical="true"
                android:layout_marginStart="6dp"
                app:civ_border_color="#A1A0A0"
                app:civ_border_width="1dp"
                android:layout_width="70dp"
                android:layout_height="70dp"/>

            <TextView
                android:id="@+id/tv_companyName"
                android:text="PT. BUKALAPAK INDONESIA"
                android:layout_toEndOf="@id/iv_companyImage"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="12dp"
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_companyType"
                android:text="Enterprise Company"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/iv_companyImage"
                android:layout_below="@id/tv_companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_companyLocation"
                android:text="-6.2088, 106.8456"
                android:textSize="12sp"
                android:layout_marginStart="12sp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@id/iv_companyImage"
                android:layout_below="@id/tv_companyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

    </LinearLayout>

</layout>
