<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage.TalentProfileActivity"
    android:background="#E5E5E5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_myprofile"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/talentImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="98dp"
                    android:src="@drawable/kiryusento" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_profileTalentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/opensans"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:context="Talent name" />

            <TextView
                android:id="@+id/tv_profileTalentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textSize="14sp"
                tools:context="Talent title" />

            <TextView
                android:id="@+id/tv_profileTalentLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20dp"
                android:drawableEnd="@drawable/ic_location"
                android:drawablePadding="8dp"
                android:textAlignment="textEnd"
                android:textColor="#BDBCBC"
                android:textSize="14sp"
                tools:context="Talent location" />

            <TextView
                android:id="@+id/tv_profileTalentDesc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/opensans"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/opensans"
                android:text="Skill"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/profile_talentSkill1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/round_bg"
                    android:fontFamily="@font/opensans"
                    android:gravity="center"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:context="Talent Skill 1" />

                <TextView
                    android:id="@+id/profile_talentSkill2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/profile_talentSkill1"
                    android:background="@drawable/round_bg"
                    android:fontFamily="@font/opensans"
                    android:gravity="center"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:context="Talent Skill 2" />

                <TextView
                    android:id="@+id/profile_talentSkill3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/profile_talentSkill2"
                    android:background="@drawable/round_bg"
                    android:fontFamily="@font/opensans"
                    android:gravity="center"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:context="Talent Skill 3" />

                <TextView
                    android:id="@+id/profile_talentSkill4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_talentSkill1"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/round_bg"
                    android:fontFamily="@font/opensans"
                    android:gravity="center"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:context="Talent Skill 4" />

                <TextView
                    android:id="@+id/profile_talentSkill5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_talentSkill2"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/profile_talentSkill4"
                    android:background="@drawable/round_bg"
                    android:fontFamily="@font/opensans"
                    android:gravity="center"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:context="Talent Skill 5" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_profileTalentEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="8dp"
                android:fontFamily="@font/opensans"
                android:gravity="start|center_vertical"
                android:padding="8dp"
                android:textColor="#7A7A7A"
                android:textSize="14sp"
                tools:context="Talent Email" />

            <TextView
                android:id="@+id/profile_talentGithub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:drawableStart="@drawable/ic_github"
                android:drawablePadding="8dp"
                android:fontFamily="@font/opensans"
                android:gravity="start|center_vertical"
                android:padding="8dp"
                android:textColor="#7A7A7A"
                android:textSize="14sp"
                tools:context="Talent Github" />


            <TextView
                android:id="@+id/tv_workTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:drawableStart="@drawable/ic_worktime"
                android:drawablePadding="8dp"
                android:fontFamily="@font/opensans"
                android:gravity="start|center_vertical"
                android:padding="8dp"
                android:textColor="#7A7A7A"
                android:textSize="14sp"
                tools:context="Talent Github" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20dp">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/profile_talentTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="180dp"></LinearLayout>

            <android.widget.Button
                android:layout_gravity="center"
                android:id="@+id/talentHire"
                android:background="@color/primary"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="28dp"
                android:text="Hire"
                android:textColor="@color/white"
                android:layout_width="324dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>