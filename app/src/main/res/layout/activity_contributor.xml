<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".homepage.item.explore.contributor.ContributorActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/backButton"
                app:backgroundTint="#5E000000"
                app:tint="@color/white"
                android:src="@drawable/ic_back"
                app:fabCustomSize="38dp"
                app:maxImageSize="24dp"
                app:elevation="0.01dp"
                app:pressedTranslationZ="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/back" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/likeButton"
                app:backgroundTint="#5E000000"
                android:layout_alignParentEnd="true"
                app:tint="@color/white"
                android:src="@drawable/ic_love"
                app:fabCustomSize="38dp"
                app:maxImageSize="24dp"
                app:elevation="0.01dp"
                app:pressedTranslationZ="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/back"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/iv_projectImage"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_project_bg"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_projectTitle"
                    android:layout_below="@id/iv_projectImage"
                    android:layout_marginTop="8dp"
                    android:text="Contoh Project Lorem Ipsum Dolor sid jamed"
                    android:textSize="20sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>

                <LinearLayout
                    android:id="@+id/ln_companyName"
                    android:orientation="horizontal"
                    android:layout_below="@+id/tv_projectTitle"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_companyImage"
                        android:src="@drawable/ic_empty_image"
                        app:civ_border_color="@color/primary"
                        app:civ_border_width="1dp"
                        android:layout_width="34dp"
                        android:scaleType="centerCrop"
                        android:layout_height="34dp"/>

                    <TextView
                        android:id="@+id/tv_companyName"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="6dp"
                        android:text="PT. Mencari Cinta Sejati"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_projectDuration"
                    android:orientation="horizontal"
                    android:layout_below="@+id/ln_companyName"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_companyTime"
                        android:src="@drawable/logo_waiting"
                        android:layout_width="34dp"
                        android:layout_height="34dp"/>

                    <TextView
                        android:id="@+id/tv_companyProjectDuration"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="6dp"
                        android:text="1 WEEK"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_projectSalary"
                    android:orientation="horizontal"
                    android:layout_below="@+id/ln_projectDuration"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_companySalary"
                        android:src="@drawable/ic_rupiah"
                        android:layout_width="34dp"
                        android:layout_height="34dp"/>

                    <TextView
                        android:id="@+id/tv_companyProjectSalary"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="6dp"
                        android:text="Rp. 16.000.000"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_projectDesc"
                    android:layout_below="@id/ln_projectSalary"
                    android:textSize="16sp"
                    android:justificationMode="inter_word"
                    android:text="@string/lorem_ipsum"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="32dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="400dp">

                        <TextView
                            android:text="CONTRIBUTOR OF THIS PROJECT"
                            android:background="@color/primary"
                            android:textAlignment="center"
                            android:padding="6dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"/>

                        <RelativeLayout
                            android:id="@+id/loadingScreen"
                            android:background="@color/white"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ProgressBar
                                android:id="@+id/progressBar"
                                android:max="100"
                                android:layout_centerInParent="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/emptyContributor"
                            android:src="@drawable/empty_data_set"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/contributorList"
                            android:nestedScrollingEnabled="true"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</layout>
