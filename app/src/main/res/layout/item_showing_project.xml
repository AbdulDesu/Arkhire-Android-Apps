<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/showAllProjectItem"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="12dp"
        android:layout_marginHorizontal="29dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="180dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_projectTitle"
                android:text="Hololive Login App"
                android:textSize="16sp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_offeredSalary"
                android:layout_below="@id/tv_projectTitle"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:text="Rp. 5.000.000"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_projectHiringStatus"
                android:layout_below="@id/tv_offeredSalary"
                android:layout_marginTop="6dp"
                android:layout_marginStart="24dp"
                android:textSize="12sp"
                android:text="(Aprroved)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_companyImage"
                android:src="@drawable/ic_profile_loading"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="20dp"
                android:layout_width="48dp"
                android:layout_height="48dp"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</layout>
