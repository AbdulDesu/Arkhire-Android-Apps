<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/showAllProjectItem"
        android:background="@drawable/bg_shadow"
        android:layout_marginStart="29dp"
        android:layout_marginTop="8dp"
        android:layout_width="350dp"
        android:layout_marginBottom="12dp"
        android:layout_height="180dp">

        <TextView
            android:id="@+id/offeringID"
            android:text="01"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="32dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_projectTitle"
            android:text="Hololive Login App"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_projectSalary"
            android:layout_below="@id/tv_projectTitle"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:text="Rp. 5.000.000"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_projectHiringStatus"
            android:layout_below="@id/tv_projectSalary"
            android:layout_marginTop="6dp"
            android:layout_marginStart="24dp"
            android:textSize="12sp"
            android:text="(Aprroved)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</layout>
